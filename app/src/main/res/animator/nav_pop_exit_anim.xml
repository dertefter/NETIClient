<set xmlns:android="http://schemas.android.com/apk/res/android">


    <objectAnimator
        android:propertyName="scaleX"
        android:valueFrom="1"
        android:valueTo="0.8"
        android:duration="490"
        android:interpolator="@anim/interpolator_emphasized_accelerate" />

    <objectAnimator
        android:propertyName="scaleY"
        android:valueFrom="1"
        android:valueTo="0.8"
        android:duration="490"
        android:interpolator="@anim/interpolator_emphasized_accelerate" />


    <objectAnimator
        android:propertyName="translationX"
        android:valueFrom="0"
        android:valueTo="1800"
        android:duration="420"
        android:interpolator="@anim/interpolator_emphasized_accelerate" />

    <objectAnimator
        android:propertyName="alpha"
        android:valueFrom="1"
        android:valueTo="0"
        android:duration="210"
        android:interpolator="@anim/interpolator_emphasized_accelerate" />

    <objectAnimator
        android:propertyName="translationZ"
        android:valueFrom="0"
        android:valueTo="20"
        android:duration="210"
        android:interpolator="@anim/interpolator_emphasized_decelerate" />

</set>
