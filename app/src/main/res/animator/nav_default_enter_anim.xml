<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="alpha"
        android:valueFrom="0"
        android:valueTo="1"
        android:duration="300"
        android:interpolator="@anim/interpolator_emphasized_accelerate" />

    <objectAnimator
        android:propertyName="translationY"
        android:valueFrom="300"
        android:valueTo="0"
        android:duration="300"
        android:interpolator="@anim/interpolator_emphasized_decelerate" />

    <objectAnimator
        android:propertyName="translationZ"
        android:valueFrom="0"
        android:valueTo="20"
        android:duration="300"
        android:interpolator="@anim/interpolator_emphasized_decelerate" />

</set>
