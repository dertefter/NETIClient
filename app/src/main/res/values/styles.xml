<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:clipChildren">true</item>
        <item name="android:divider">@drawable/vertical_divider_small</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:showDividers">beginning|middle|end</item>
        <item name="liftOnScroll">true</item>
        <item name="liftOnScrollColor">?attr/colorSurfaceContainerLow</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerLow</item>
    </style>


    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
        <item name="cardCornerRadius">@dimen/radius</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ShapeAppearance.Image.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Widget.App.Chip" parent="@style/Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>


</resources>