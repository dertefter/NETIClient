<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NETIClient.Widget.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:clipChildren">true</item>
        <item name="android:divider">@drawable/vertical_divider_small</item>
        <item name="android:showDividers">none</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="liftOnScroll">true</item>
        <item name="liftOnScrollColor">?attr/colorSurfaceContainer</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="NETIClient.BottomSheetDialog" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>


    <style name="NETIClient.Widget.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
        <item name="cardCornerRadius">@dimen/radius</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NETIClient.ShapeAppearance.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="NETIClient.Widget.LoginTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceContainer</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
    </style>


    <style name="NETIClient.TextStyle.SexyTitle" parent="TextAppearance.Material3.HeadlineMedium.Emphasized">
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:paddingVertical">@dimen/margin_min</item>
    </style>


</resources>