<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background_big"
    android:backgroundTint="?attr/colorSurfaceContainer"
    android:orientation="vertical"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/max"
        android:paddingVertical="@dimen/max">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/date_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/near_lessons"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_tv2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ближайшие занятия"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:divider="@drawable/vertical_divider_micro"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/max"
        android:paddingVertical="@dimen/max"
        android:showDividers="middle">

        <include
            layout="@layout/widget_next_lessons_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/widget_next_lessons_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/widget_next_lessons_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Нет предстоящих занятий"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />

</LinearLayout>