<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_d7"
    android:backgroundTint="?attr/colorSurfaceContainer"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/d5"
            android:paddingVertical="@dimen/d5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/date_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/near_lessons"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/date_tv2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ближайшие занятия"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

        </FrameLayout>

        <ListView
            android:id="@+id/widget_lesson_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorSurface"
            android:clipToPadding="false"
            android:divider="@drawable/div_vertical_d1"
            android:paddingLeft="@dimen/d5"
            android:paddingTop="@dimen/d5"
            android:paddingRight="@dimen/d5"
            android:paddingBottom="110dp"
            tools:listitem="@layout/widget_next_lessons_item" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Нет предстоящих занятий"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />

    <Button
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/d2"
        android:background="@drawable/rounded_d9"
        android:backgroundTint="?attr/colorPrimary"
        android:elevation="4dp"
        android:text="Button"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        android:visibility="gone"
        app:cornerRadius="@dimen/d7" />

</FrameLayout>