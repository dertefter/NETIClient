<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="@dimen/radius_max"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="3dp">

    <TextView
        android:id="@+id/type_exp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="-40dp"
        android:layout_marginBottom="-18dp"
        android:alpha="0.05"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="?attr/colorOnSurfaceVariant"
         />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_divider_big"
        android:orientation="vertical"
        android:padding="@dimen/margin_max"
        android:showDividers="middle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall.Emphasized"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:text="Физическое химио-био" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:layout_gravity="top"
                android:clickable="false"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false"
                android:paddingEnd="@dimen/margin_min"
                android:visibility="visible"
                tools:itemCount="1"
                tools:listitem="@layout/item_person_avatar" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/aud"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="1111111"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall.Emphasized"

                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/rounded_background"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall.Emphasized"

                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="invisible" />

        </FrameLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
