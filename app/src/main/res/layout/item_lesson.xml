<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="@dimen/maxi"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="3dp">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_divider_big"
        android:orientation="vertical"
        android:padding="@dimen/maxi"
        android:showDividers="middle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_now"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge.Emphasized"
                android:textColor="?attr/colorSecondary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Физическое химио-био" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:minLines="2"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge.Emphasized"
                android:textColor="?attr/colorOnSurface"
                android:textSize="22sp"
                android:textStyle="normal"
                tools:text="Физическое химио-био" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:clickable="false"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="false"
                android:paddingEnd="@dimen/mini"
                android:visibility="visible"
                tools:itemCount="1"
                tools:listitem="@layout/item_person_avatar" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/aud"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_maximorum"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall.Emphasized"

                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/rounded_maximorum"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="12dp"

                android:textAppearance="@style/TextAppearance.Material3.TitleSmall.Emphasized"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/now_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:visibility="visible"
        app:srcCompat="?attr/colorSecondaryContainer" />

</com.google.android.material.card.MaterialCardView>
