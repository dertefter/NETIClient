<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:minHeight="300dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/div_vertical_d5"
            android:orientation="vertical"
            android:padding="@dimen/d5"
            android:showDividers="middle">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/d5"
                android:paddingBottom="@dimen/d2" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                android:textColor="?attr/colorOnSurface" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:elevation="0dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="@dimen/d6"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPaddingLeft="@dimen/d2"
                    app:contentPaddingRight="@dimen/d2">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:maxWidth="160dp"
                        android:paddingVertical="4dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="TextView"
                        android:textColor="?attr/colorOnSurfaceVariant"
                         />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="@dimen/d6"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPaddingLeft="@dimen/d2"
                    app:contentPaddingRight="@dimen/d2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/div_horizontal_d1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            app:tint="?attr/colorOnSurfaceVariant"
                            app:srcCompat="@drawable/ic_tag" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingVertical="4dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:text="TextView"
                            android:textColor="?attr/colorOnSurfaceVariant"
                             />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/div_horizontal_d1"
                android:orientation="horizontal"
                android:showDividers="middle">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    app:tint="?attr/colorOnSurfaceVariant"
                    app:srcCompat="@drawable/ic_person" />

                <TextView
                    android:id="@+id/person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="3sp"
                    android:paddingEnd="@dimen/d5"
                    android:text="TextView"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="@dimen/d7"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:contentPadding="@dimen/d5">

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="?attr/colorOnSurfaceVariant"
                     />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/cancel_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="?attr/colorError"
                android:text="Отменить заявку"
                android:textColor="?attr/colorOnError"
                android:visibility="visible" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>