<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/d5"
    android:clickable="false">

    <FrameLayout
        android:layout_width="52dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:text="77:77"
             />

        <TextView
            android:id="@+id/timeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:text="77:77"
             />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_widget_inner_view_background"
        android:backgroundTint="?attr/colorSurfaceContainerLow"
        android:divider="@drawable/div_vertical_d5"
        android:orientation="vertical"
        android:padding="@dimen/d5"
        android:showDividers="middle">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:includeFontPadding="false"
            android:textColor="?attr/colorOnSurface"

            tools:text="Физическое химио-био" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/aud"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_d9"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d2"
                android:textColor="?attr/colorOnSurfaceVariant"

                android:visibility="invisible" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/rounded_d9"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:gravity="center"
                android:paddingHorizontal="@dimen/d2"
                android:textColor="?attr/colorOnSurfaceVariant"

                android:visibility="invisible" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>
