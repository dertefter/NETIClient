<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/rounded_d9"
    android:backgroundTint="?attr/colorSurfaceContainerHigh">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="none"
        app:liftOnScroll="true"
        app:liftOnScrollColor="?attr/colorSurfaceContainerHigh">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/d6"
            android:paddingVertical="@dimen/d2"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <Button
                android:id="@+id/back_button"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="?attr/colorSurfaceContainerLow"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="textStart" />

        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_d7"
        android:backgroundTint="?attr/colorSurface"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/div_vertical_d5"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/d5"
            android:paddingVertical="@dimen/d5"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новая заявка"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium.Emphasized"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="?attr/colorSurfaceVariant"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/d7"
                app:boxCornerRadiusBottomStart="@dimen/d7"
                app:boxCornerRadiusTopEnd="@dimen/d7"
                app:boxCornerRadiusTopStart="@dimen/d7"
                app:boxStrokeColor="?attr/colorSurfaceVariant"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/docSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Загрузка..."
                    android:inputType="none"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/additionalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:boxCornerRadiusBottomEnd="@dimen/d7"
                app:boxCornerRadiusBottomStart="@dimen/d7"
                app:boxCornerRadiusTopEnd="@dimen/d7"
                app:boxCornerRadiusTopStart="@dimen/d7">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="top"
                    android:visibility="visible" />

            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/claim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:enabled="false"
                    android:text="Создать заявку"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/cancel"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Отмена"
                    android:visibility="visible" />
            </FrameLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_d9"
                android:backgroundTint="?attr/colorSurfaceVariant"
                android:padding="@dimen/d5"
                android:text="Новая заявка"
                android:textColor="?attr/colorOnSurfaceVariant"

                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>