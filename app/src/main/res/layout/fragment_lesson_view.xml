<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/vertical_divider"
            android:orientation="vertical"
            android:padding="@dimen/margin_max"
            android:showDividers="middle">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_max"
                android:paddingBottom="@dimen/margin_min" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium.Emphasized"

                android:textColor="?attr/colorOnSurface"
                android:textStyle="normal"
                tools:text="Физическое химио-био" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin"
                    android:text="1111111"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"

                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/margin"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"

                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background_small"
                android:backgroundTint="?attr/colorSurfaceContainerHigh"
                android:divider="@drawable/horizontal_divider_small"
                android:padding="@dimen/margin"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/timeStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:includeFontPadding="false"
                    android:text="10:15"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                    android:textColor="?attr/colorOnPrimaryContainer" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="40"
                    app:indicatorColor="?attr/colorSecondary"
                    app:trackColor="?attr/colorSurfaceVariant"
                    app:trackStopIndicatorSize="0dp"
                    app:waveAmplitude="2dp"
                    app:waveSpeed="12dp"
                    app:wavelength="24dp"
                    app:wavelengthDeterminate="24dp"
                    app:wavelengthIndeterminate="24dp" />

                <TextView
                    android:id="@+id/timeEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:includeFontPadding="false"
                    android:text="10:15"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                    android:textColor="?attr/colorOnPrimaryContainer" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_min" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>