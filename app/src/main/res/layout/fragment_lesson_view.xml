<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/vertical_divider_small"
            android:orientation="vertical"
            android:padding="@dimen/maximorum"
            android:showDividers="middle">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/maxi"
                android:paddingBottom="@dimen/mini" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"

                android:textColor="?attr/colorOnSurface"
                android:textStyle="normal"
                tools:text="Физическое химио-био" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_maximorum"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/max"
                    android:text="1111111"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"

                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/rounded_maximorum"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/max"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"

                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_maximorum"
                android:backgroundTint="?attr/colorSurfaceContainerHighest"
                android:divider="@drawable/vertical_divider_micro"
                android:orientation="vertical"
                android:padding="@dimen/max"
                android:showDividers="middle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:includeFontPadding="false"
                    android:text="@string/now"

                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/horizontal_divider_small"

                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/timeStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:text="10:15"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="40"
                        app:indicatorColor="?attr/colorOnSurface"
                        app:trackColor="?attr/colorSurfaceVariant"
                        app:trackStopIndicatorSize="0dp"
                        app:waveAmplitude="2dp"
                        app:waveSpeed="12dp"
                        app:wavelength="24dp"
                        app:wavelengthDeterminate="24dp"
                        app:wavelengthIndeterminate="24dp" />

                    <TextView
                        android:id="@+id/timeEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:text="10:15"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/future_past"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_maximorum"
                android:backgroundTint="?attr/colorSurfaceContainerHigh"
                android:divider="@drawable/vertical_divider_micro"
                android:orientation="vertical"
                android:padding="@dimen/max"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/future_past_tv"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:includeFontPadding="false"
                    android:text="@string/will_start"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:text="5 сентября"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:text="@string/at"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/timeStartFuture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:text="10:15"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge.Emphasized"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/max"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/maximorum">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/personsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_person" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>