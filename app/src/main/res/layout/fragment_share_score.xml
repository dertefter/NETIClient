<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:minHeight="300dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:divider="@drawable/vertical_divider"
            android:orientation="vertical"
            android:padding="@dimen/maximorum"
            android:showDividers="middle">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/max"
                android:paddingBottom="@dimen/mini" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:includeFontPadding="false"
                android:letterSpacing="0.07"
                android:text="@string/share_score_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge.Emphasized"

                android:textColor="?attr/colorOnSurface"
                android:textStyle="normal" />

            <include
                android:id="@+id/load_fail"
                layout="@layout/load_failed_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/max"
                android:visibility="gone" />

            <com.dertefter.neticlient.common.ShimmerLayout
                android:id="@+id/skeleton"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/vertical_divider_small"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/rounded_maximorum"
                        android:backgroundTint="?attr/colorSurfaceContainerHighest"
                        android:padding="@dimen/max"
                        app:tint="?attr/colorOnPrimary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:boxBackgroundColor="?attr/colorSurfaceContainerHighest"
                        app:boxCornerRadiusBottomEnd="@dimen/maxi"
                        app:boxCornerRadiusBottomStart="@dimen/maxi"
                        app:boxCornerRadiusTopEnd="@dimen/maxi"
                        app:boxCornerRadiusTopStart="@dimen/maxi"
                        app:boxStrokeColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:startIconTint="?attr/colorPrimary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:divider="@drawable/horizontal_divider_small"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <Button
                            style="@style/Widget.Material3.Button.IconButton.Filled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            app:icon="@drawable/content_copy_icon"
                            app:iconTint="?attr/colorSurfaceVariant" />

                        <Button
                            style="@style/Widget.Material3Expressive.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            android:text="@string/replace_link"
                            android:textColor="?attr/colorSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>
            </com.dertefter.neticlient.common.ShimmerLayout>

            <LinearLayout
                android:id="@+id/success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/vertical_divider_small"
                android:orientation="vertical"
                android:showDividers="middle">

                <ImageView
                    android:id="@+id/qr_code_view"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_maximorum"
                    android:backgroundTint="?attr/colorSurfaceContainerHigh"
                    android:padding="@dimen/max"
                    app:tint="?attr/colorOnPrimaryContainer" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/link_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxBackgroundColor="?attr/colorSurfaceContainer"
                    app:boxCornerRadiusBottomEnd="@dimen/maxi"
                    app:boxCornerRadiusBottomStart="@dimen/maxi"
                    app:boxCornerRadiusTopEnd="@dimen/maxi"
                    app:boxCornerRadiusTopStart="@dimen/maxi"
                    app:boxStrokeColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:startIconTint="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:textIsSelectable="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/horizontal_divider_small"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/copy_button"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/content_copy_icon" />

                    <Button
                        android:id="@+id/new_link_button"
                        style="@style/Widget.Material3Expressive.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/replace_link" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/share_score_info"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>