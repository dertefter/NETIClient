<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/rounded_background"
    android:backgroundTint="?attr/colorSurface"
    android:divider="@drawable/horizontal_divider"
    android:showDividers="middle"
    tools:context=".ui.schedule.ScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pane1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:clickable="false"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="0dp">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    app:liftOnScroll="true"
                    app:liftOnScrollTargetViewId="@id/pager">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:maxWidth="1000dp"
                        android:paddingHorizontal="@dimen/margin"
                        android:paddingVertical="@dimen/margin"
                        android:text="@string/messages_title"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium.Emphasized"
                        android:textColor="?attr/colorTertiary"
                        app:layout_scrollFlags="scroll|enterAlwaysCollapsed" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filter_chips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:paddingHorizontal="@dimen/margin"
                        android:paddingVertical="@dimen/margin_min"
                        app:chipSpacingVertical="0dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_p_1"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Преподаватели и службы"
                            app:ensureMinTouchTargetSize="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_p_2"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Прочее"
                            app:ensureMinTouchTargetSize="false" />

                    </com.google.android.material.chip.ChipGroup>

                </com.google.android.material.appbar.AppBarLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                </androidx.viewpager2.widget.ViewPager2>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/login_helper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="?attr/colorSurface"
        android:elevation="10dp"
        android:visibility="gone">

    </FrameLayout>


</FrameLayout>