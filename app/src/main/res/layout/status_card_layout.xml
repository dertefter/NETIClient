<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/d6">

    <FrameLayout
        android:id="@+id/status_guest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurfaceContainerHigh"
        android:padding="@dimen/d6">

        <com.dertefter.shapemorphview.ShapeMorphView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:clickable="true"
            android:visibility="visible"
            app:bgColor="?attr/colorPrimary"
            app:shape="PIXEL_TRIANGLE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:divider="@drawable/div_vertical_d1"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/auth_title"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                android:textColor="?attr/colorOnSurface"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/ob_2_title_1"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/status_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorError"
        android:padding="@dimen/d6"
        android:visibility="gone">

        <com.dertefter.shapemorphview.ShapeMorphView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:clickable="true"
            android:visibility="visible"
            app:bgColor="?attr/colorErrorContainer"
            app:imageResource="@drawable/ic_close"
            app:shape="CLOVER_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:divider="@drawable/div_vertical_d1"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/auth_error"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                android:textColor="?attr/colorOnError"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/load_retry"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorOnError" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/status_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondaryContainer"
        android:padding="@dimen/d6"
        android:visibility="gone">

        <com.google.android.material.loadingindicator.LoadingIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            app:indicatorColor="?attr/colorSecondary"
            app:indicatorSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:divider="@drawable/div_vertical_d1"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/authing"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/please_wait"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorOnSecondaryContainer" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/status_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:padding="@dimen/d6"
        android:visibility="gone">

        <com.dertefter.shapemorphview.ShapeMorphView
            android:id="@+id/avatar_shape"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:clickable="true"
            android:visibility="visible"
            app:bgColor="?attr/colorPrimaryContainer"
            app:shape="CIRCLE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:divider="@drawable/div_vertical_d1"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Сергей"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>
    </FrameLayout>

</com.google.android.material.card.MaterialCardView>