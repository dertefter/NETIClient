<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:animateLayoutChanges="false"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/max"
        android:layout_marginVertical="@dimen/max"
        android:animateLayoutChanges="false"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="?attr/colorPrimaryContainer"
        android:outlineSpotShadowColor="?attr/colorPrimary"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <FrameLayout
            android:id="@+id/status_loading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:animateLayoutChanges="true"
            android:background="?attr/colorPrimaryContainer">

            <ImageView
                android:id="@+id/pre_loading_indicator"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/shape_1"
                app:tint="?attr/colorOnPrimaryContainer" />

            <com.google.android.material.loadingindicator.LoadingIndicator
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorColor="?attr/colorOnPrimaryContainer" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/status_error"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorSurfaceVariant"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/max"
                android:paddingEnd="@dimen/max">

                <TextView
                    android:id="@+id/title_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/update_fail"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                    android:textColor="?attr/colorError" />

                <TextView
                    android:id="@+id/subtitle_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/load_retry"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall.Emphasized"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
