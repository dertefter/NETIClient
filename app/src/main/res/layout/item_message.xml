<?xml version="1.0" encoding="utf-8"?>
<com.dertefter.neticlient.common.MaskedCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="@dimen/radius_micro">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_weight="1"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:maxLines="2"
        android:padding="@dimen/margin_max"
        android:text="19 сен"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/horizontal_divider"
        android:orientation="horizontal"
        android:padding="@dimen/margin_max"
        android:showDividers="middle">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorSecondaryContainer"
                app:contentPadding="4dp"
                app:shapeAppearanceOverlay="@style/NETIClient.ShapeAppearance.Rounded"
                app:srcCompat="@drawable/person"
                app:tint="?attr/colorOnSecondaryContainer" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/NETIClient.ShapeAppearance.Rounded" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/vertical_divider_micro"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/sender_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:lines="1"
                android:maxLines="1"
                android:text="fdbbdfbffbdbdf"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:maxLines="1"
                android:text="bdfbdffbdbdfbdfbdfbdfbdf"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge.Emphasized"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:justificationMode="inter_word"
                android:maxLines="1"
                android:text="sddvsjoooooooooooooooooooooooooooo"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized" />

        </LinearLayout>

    </LinearLayout>

</com.dertefter.neticlient.common.MaskedCardView>