<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_columnWeight="1"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_maximorum"
    android:backgroundTint="?attr/colorSurfaceContainerLow">

    <!-- Индикатор сегодня (зеленый круг) -->
    <View
        android:id="@+id/indicator_today_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/rounded_maximorum"
        android:visibility="gone" />

    <!-- Индикатор выбранного дня (синий круг) -->

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface"
         />

    <!-- Индикатор события (красная точка) -->
    <View
        android:id="@+id/eventIndicator"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_maximorum"
        android:backgroundTint="?attr/colorTertiary"
        android:visibility="gone" />
</FrameLayout>