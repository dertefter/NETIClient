<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="false">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/maxi"
            android:paddingVertical="@dimen/mini"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:divider="@drawable/horizontal_divider"
                android:orientation="horizontal"
                android:showDividers="middle">

                <Button
                    android:id="@+id/back_button"
                    style="@style/Widget.Material3Expressive.Button.IconButton.Tonal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="?attr/colorSurfaceContainerLow"
                    app:icon="@drawable/arrow_back"
                    app:iconGravity="textStart"
                    app:iconTint="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/NETIClient.TextStyle.SexyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_settings" />

            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/max"
            android:layout_marginVertical="@dimen/mini"
            app:cardCornerRadius="@dimen/maxi">

            <LinearLayout
                android:id="@+id/status_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?attr/colorPrimaryContainer"
                android:divider="@drawable/horizontal_divider_small"
                android:orientation="horizontal"
                android:padding="@dimen/max"
                android:showDividers="middle">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="@dimen/min">

                    <FrameLayout
                        android:id="@+id/auth_loading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/colorPrimaryContainer"
                        android:visibility="visible">

                        <com.google.android.material.loadingindicator.LoadingIndicator
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            app:indicatorColor="?attr/colorPrimary"
                            app:indicatorSize="40dp"
                            tools:visibility="visible" />
                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:divider="@drawable/vertical_divider_micro"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/authing"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?attr/colorPrimary"
                android:divider="@drawable/horizontal_divider_small"
                android:orientation="horizontal"
                android:padding="@dimen/max"
                android:showDividers="middle">

                <com.dertefter.neticlient.common.AnotherShapeView
                    android:id="@+id/avatar_shape"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:divider="@drawable/vertical_divider_micro"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                        android:textColor="?attr/colorOnPrimary" />

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?attr/colorSurfaceVariant"
                android:divider="@drawable/horizontal_divider_small"
                android:orientation="horizontal"
                android:padding="@dimen/max"
                android:showDividers="middle"
                android:visibility="visible">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/mini"
                    android:visibility="visible"
                    app:srcCompat="@drawable/warning"
                    app:tint="?attr/colorError" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:divider="@drawable/vertical_divider_micro"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auth_error"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                        android:textColor="?attr/colorError" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load_retry"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_guest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="?attr/colorSurfaceContainer"
                android:divider="@drawable/horizontal_divider_small"
                android:orientation="horizontal"
                android:padding="@dimen/max"
                android:showDividers="middle"
                android:visibility="visible">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:padding="@dimen/mini"
                    android:visibility="visible"
                    app:srcCompat="@drawable/person"
                    app:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:divider="@drawable/vertical_divider_micro"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auth_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auth_login_to"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/logout"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginHorizontal="@dimen/max"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorSurfaceContainerHigh"
                android:insetLeft="4dp"
                android:insetTop="4dp"
                android:insetRight="4dp"
                android:insetBottom="4dp"
                android:visibility="gone"
                app:icon="@drawable/logout"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="?attr/colorError" />

        </com.google.android.material.card.MaterialCardView>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/max"
        android:paddingVertical="@dimen/mini"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>