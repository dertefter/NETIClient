<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/vertical_divider_small"
        android:orientation="vertical"
        android:padding="@dimen/max"
        android:showDividers="middle">

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="fdbbdfbffbdbdf"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium.Emphasized"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="bdfbdffbdbdfbdfbdfbdfbdf"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium.Emphasized"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:maxLines="2"
            android:text="bbfbfbdfbdfbdfbdfdbffbddbfbdfbfbdfbdfbfbdfbdfbdfbdfbdffbdbdffbdfbd hfnngfg"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall.Emphasized" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>