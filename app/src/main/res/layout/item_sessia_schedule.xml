<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/d6"
        android:paddingBottom="@dimen/d2">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:textColor="?attr/colorPrimary"
             />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            android:text="TextView"
            android:textColor="?attr/colorOnSurfaceVariant"
             />
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="@dimen/d6"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:contentPadding="@dimen/d5"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="3dp">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/div_vertical_d1"
            android:orientation="vertical"
            android:showDividers="middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:includeFontPadding="false"
                    android:letterSpacing="0.07"
                    android:textColor="?attr/colorOnSurface"

                    android:textStyle="normal"
                    tools:text="Физическое химио-био" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/personsRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:clickable="false"
                    android:isScrollContainer="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingEnd="@dimen/d2"
                    android:visibility="visible"
                    tools:listitem="@layout/item_person_avatar" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_d9"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="1111111"
                    android:textColor="?attr/colorOnSurfaceVariant"

                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/rounded_d9"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:textColor="?attr/colorOnSurfaceVariant"

                    android:visibility="invisible" />

            </FrameLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>